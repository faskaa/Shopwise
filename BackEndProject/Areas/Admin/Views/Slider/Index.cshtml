
@{
    ViewData["Title"] = "Index";
}
@model List<Slider>
<h1>Index</h1>

<div class="card-body">
    <h4 class="card-title">Inverse table</h4>
    <p class="card-description">
        Add class <code>.table-dark</code>
    </p>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <a asp-controller="Slider" asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>

            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Slider Title
                    </th>
                    <th>
                        Slider Description
                    </th>
                    <th>
                        Slider BgImage
                    </th>
                    <th>
                        Slider Description
                    </th>
                    <th>
                        Slider Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @*   <tr>
                <td>

                </td>
                <td>
                Herman Beck
                </td>
                <td>
                $ 77.99
                </td>
                </tr> *@
                @{
                    int count = 0;
                }
                @foreach(Slider slider in Model)
                {
                    count++;
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Description
                        </td>
                        <td>
                            <img style="width:100%;height:100%" src="~/assets/images/@slider.BgImage">
                        </td>
                        <td>
                            @slider.URL
                        </td>
                        <td>
                            <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning btn-rounded btn-fw">Update</a>
                            <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" id="DeleteBtn" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


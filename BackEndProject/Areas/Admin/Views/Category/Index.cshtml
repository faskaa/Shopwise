
@{
    ViewData["Title"] = "Index";
}
@model List<Category>
<div class="card-body">
    <h4 class="card-title">Inverse table</h4>
    <p class="card-description">
        Add class <code>.table-dark</code>
    </p>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <a asp-controller="Category" asp-action="Create"  class="btn btn-success btn-rounded btn-fw">Create</a>

            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
              @*   <tr>
                    <td>
                        
                    </td>
                    <td>
                        Herman Beck
                    </td>
                    <td>
                        $ 77.99
                    </td>
                </tr> *@
                @{
                    int count = 0;
                }
                @foreach (Category categories in Model)
                {
                    count++;
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @categories.Name
                        </td>
                        <td>
                            <a asp-controller="Category" asp-action="Detail" asp-route-id="@categories.Id"  class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-controller="Category" asp-action="Update" asp-route-id="@categories.Id" class="btn btn-warning btn-rounded btn-fw">Update</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@categories.Id" id="DeleteBtn" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the category <span id="categoryName"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a id="deleteLink" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript function to show confirmation modal
    function showConfirmationModal(categoryName) {
        $('#categoryName').text(categoryName);
        $('#confirmationModal').modal('show');
        // Set the delete link href when the user clicks 'Delete'
        $('#deleteLink').attr('href', '/Category/Delete/' + categoryName); // Adjust the URL accordingly
    }
</script>

